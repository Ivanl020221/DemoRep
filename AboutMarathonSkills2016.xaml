                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="20,5,5,5" Background="LightGray">
                            <Image/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="20,5,5,5" Background="LightGray" Grid.Column="0" Grid.Row="1">
                            <Image/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="5,5,20,5" Background="LightGray" Grid.Column="1" Grid.Row="0">
                            <Image/>
